
<h4>Add a comment</h4>
<%= form_for ([topic, post, post.comments.new]) do |f| %>
  <%= f.label :body %><br>
  <%= f.text_area :body %>
  <% if policy(@post).create? %>
    <%= f.submit "Save" %>
  <% else %>
   <br>
    <%= link_to "Sign up first", new_user_registration_path, class: 'btn btn-primary' %>
  <% end %>
<% end %>
